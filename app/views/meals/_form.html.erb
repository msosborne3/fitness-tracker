<%= form_for @meal do |f| %>
  <%= f.label :meal_type %>
  <%= f.text_field :meal_type %><br>
  <br>
  <%= f.fields_for :food_items do |food| %>
    <%= food.label "Food Name" %>
    <%= food.text_field :name %><br>

    <%= food.label :serving_size %>
    <%= food.text_field :serving_size %><br>

    <%= food.label :num_servings %>
    <%= food.text_field :num_servings %><br>

    <%= food.label :calories %>
    <%= food.text_field :calories %><br>

    <%= food.label :fat %>
    <%= food.text_field :fat %><br>

    <%= food.label :cholesterol %>
    <%= food.text_field :cholesterol %><br>

    <%= food.label :sodium %>
    <%= food.text_field :sodium %><br>

    <%= food.label :carbs %>
    <%= food.text_field :carbs %><br>

    <%= food.label :protein %>
    <%= food.text_field :protein %><br>
    <br>
  <% end %>

  <%= f.submit %>
<% end %>